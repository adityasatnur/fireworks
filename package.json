{
  "name": "fireworks-canvas",
  "version": "2.3.2",
  "description": "fireworks example",
  "browser": "./fireworks.min.js",
  "main": "./fireworks.node.js",
  "module": "./fireworks.mjs",
  "types": "./fireworks.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "start": "cross-env NODE_ENV=development npm run build -- -w",
    "lint": "eslint . --ext ts --ext js"
  },
  "files": [
    "fireworks.d.ts",
    "fireworks.min.js",
    "fireworks.js",
    "fireworks.mjs",
    "fireworks.node.js",
    "README.MD",
    "LICENSE",
    "package.json"
  ],
  "author": {
    "name": "Tyler Waters",
    "email": "tyler.waters@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tswaters/fireworks.git"
  },
  "contributors": [
    "Andrey (https://github.com/tugrik)"
  ],
  "license": "WTFPL",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.28.0",
    "rollup-plugin-bundle-html": "^0.2.2",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "examples"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "parserOptions": {
          "sourceType": "module",
          "ecmaVersion": 2019,
          "project": "./tsconfig.json"
        },
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "rules": {
          "@typescript-eslint/member-delimiter-style": [
            2,
            {
              "multiline": {
                "delimiter": "none",
                "requireLast": false
              }
            }
          ]
        }
      },
      {
        "files": "rollup.config.js",
        "parserOptions": {
          "sourceType": "module"
        },
        "env": {
          "node": true
        },
        "rules": {
          "@typescript-eslint/*": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
